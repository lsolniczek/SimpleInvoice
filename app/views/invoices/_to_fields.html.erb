<div class="form-horizontal form-group">
  <%= f.label :name, "To", :class => "col-lg-2 control-label" %>
  <div class="col-lg-12" style="padding-bottom:5px;">
    <%= f.text_field :name, :class => "form-control input-sm", :placeholder => "Name" %>
  </div>
  <div class="col-lg-12" style="padding-bottom:5px;">
    <%= f.email_field :email, :class => "form-control input-sm", :placeholder => "Email" %>
  </div>
  <div class="col-lg-12">
    <%= f.text_area :more_info, :class => "form-control input-sm", :rows => "3" %>
  </div>
</div>